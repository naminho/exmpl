{
  "name": "exmpl",
  "description": "React components to quickly demonstrate and document your creation.",
  "version": "2.0.0",
  "repository": "github:tobua/exmpl",
  "homepage": "https://tobua.github.io/exmpl",
  "license": "MIT",
  "author": "Matthias Giger",
  "scripts": {
    "build": "padua build",
    "start": "padua watch"
  },
  "padua": {
    "esbuild": {
      "external": [
        "react",
        "../asset/*"
      ]
    },
    "tsconfig": {
      "include": [
        "declarations.d.ts"
      ]
    }
  },
  "peerDependencies": {
    "react": "^17.0.1"
  },
  "main": "dist/index.js",
  "source": "index.tsx",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "asset"
  ],
  "devDependencies": {
    "@types/react": "^17.0.2",
    "padua": "^0.2.5"
  },
  "prettier": "padua/configuration/.prettierrc.json",
  "eslintConfig": {
    "extends": "./node_modules/padua/configuration/eslint.cjs"
  },
  "engines": {
    "node": ">= 14"
  }
}
